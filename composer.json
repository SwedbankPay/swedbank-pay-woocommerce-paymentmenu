{
    "name": "swedbank-pay/woocommerce-payment-menu",
    "description": "Swedbank Pay Payment Menu for WooCommerce",
    "homepage": "https://github.com/SwedbankPay/swedbank-pay-woocommerce-paymentmenu",
    "type": "wordpress-plugin",
    "license": "Apache-2.0",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "php-stubs/woocommerce-stubs": "^8.1",
        "wp-coding-standards/wpcs": "^3.0",
        "yoast/phpunit-polyfills": "^1.0.2",
        "wpify/scoper": "3.1.3",
        "phpcsstandards/phpcsutils": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Krokedil\\Swedbank\\Pay\\": "src/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "wpify/scoper": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "wpify-scoper": {
            "prefix": "KrokedilSwedbankPayDeps",
            "folder": "vendor/dependencies",
            "autorun": true,
            "globals": [
                "wordpress",
                "woocommerce"
            ],
            "composerjson": "composer-dependencies.json",
            "composerlock": "composer-dependencies.lock"
        }
    },
    "scripts": {
        "phpcs": "@php ./vendor/bin/phpcs --standard=phpcs.xml **/*.php",
        "phpcbf": "@php ./vendor/bin/phpcbf --standard=phpcs.xml **/*.php"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
