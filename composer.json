{
    "name": "swedbank-pay/woocommerce-payment-menu",
    "description": "Swedbank Pay Payment Menu for WooCommerce",
    "homepage": "https://github.com/SwedbankPay/swedbank-pay-woocommerce-paymentmenu",
    "type": "wordpress-plugin",
    "license": "Apache-2.0",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "php-stubs/woocommerce-stubs": "^8.1",
        "wp-coding-standards/wpcs": "^3.0",
        "yoast/phpunit-polyfills": "^1.0.2",
        "wpify/scoper": "3.1.3"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:krokedil/support.git"
        }
    ],
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "wpify/scoper": true,
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    },
    "extra": {
        "wpify-scoper": {
            "prefix": "KrokedilSwedbankPayDeps",
            "folder": "dependencies",
            "autorun": true,
            "globals": [
                "wordpress",
                "woocommerce"
            ]
        }
    },
    "minimum-stability": "dev"
}
